<!-- News -->
<section class="ubc-box ubc-box--blog body-content">
    <div class="container-lg container-fluid">
        <div class="ubc-box__header ubc-box__header-spacing">
            <div class=" text-center">
                <div class="col-lg-8 m-auto tilte-menu">
                    <h4 class="h4"><b>Tin tức</b></h4>
                </div>
            </div>
        </div>

        <div class="row">
            <% if (typeof newsArticles !== 'undefined' && newsArticles.length > 0) { %>
                <% newsArticles.forEach(function(article, index){ %>
                    <div class="col-12 col-sm-6 col-lg-4 mb-4 ">
                        <div class="ubc-blog-card d-flex flex-column ">
                            <a href="detail-news/<%= article._id %>" target="blank ">
                                <div class="ubc-blog-card__image "
                                    style="background: url('<%= article.img %>') center center no-repeat; ">
                                </div>
                            </a>
                            <div class="ubc-blog-card__content d-flex flex-column ">
                                <div class="ubc-blog-card__content__header d-flex flex-column ">
                                    <h5 class="ubc-blog-card__title ">
                                        <%= article.title %>
                                    </h5>
                                </div>
                                <div class="mt-auto "><button
                                        class=" d-inline-block btn btn--blue align-items-center btn--radius-100 float-right "><a
                                            href="detail-news/<%= article._id %>" class=" "><span class="text ">ĐỌC TIẾP</span></a></button></div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else {%>
                <p>No articles found >:( </p>
            <% } %>

        </div>
        <!-- <div class="d-flex justify-content-center">
            <a href="/news" class="">
                <a href="javascript:void(0)" class="product-redirect-link text-center">
                    <span>Xem tất cả</span>
                    <span class="ml-5"><i aria-hidden="true" class="fa fa-arrow-right"></i>
                    </span>
                </a>
            </a>
        </div> -->

    </div>
</section>
<!--End News -->
<script>
    $(document).ready(function () {
        $('#homepage').removeClass('active');
        $('#news').addClass('active');
    }); 
</script>