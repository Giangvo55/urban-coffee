<!-- Detail -->
<section class="body-content pt-3">
    <div class="container btn-back" style="font-size: 25px; position: fixed; left: 35px; width: fit-content; ">
        <a href="javascript:history.back()"><i class="fas fa-chevron-left"></i></a>
    </div>
    <div class="container detail-product-shadow mb-3"
        style="background-color: #eef6f6; border-radius: 30px; margin-top: 50px;">
        <% if (drink !=null) { %>
            <div class="row ">
                <div class="col-lg-5 p-3">
                    <div class="mb-4 m-auto" style="width: fit-content;">
                        <img class="card-img product-wap" src="<%- drink.img %>" alt="Card image cap"
                            id="product-detail" style="width:400px;border-radius: 15px; border:  3px solid #122223">
                    </div>
                    <div class="row">
                        <!--Start Controls-->
                        <div class="col-1 align-self-center">
                            <a href="#multi-item-example" role="button" data-bs-slide="prev">
                                <i class="text-dark fas fa-chevron-left"></i>
                                <span class="sr-only">Previous</span>
                            </a>
                        </div>
                        <!--End Controls-->
                        <!--Start Carousel Wrapper-->
                        <div id="multi-item-example" class="col-10 carousel slide carousel-multi-item"
                            data-bs-ride="carousel">
                            <!--Start Slides-->
                            <div class="carousel-inner product-links-wap" role="listbox">

                                <!--First slide-->
                                <div class="carousel-item active">
                                    <div class="row">
                                        <div class="col-4 align-center">

                                            <img class="card-img img_carousel_small" src="<%- drink.img %>"
                                                alt="Product Image 1">
                                        </div>
                                        <div class="col-4 align-center">

                                            <img class="card-img img_carousel_small" src="<%- drink.img %>"
                                                alt="Product Image 2">
                                        </div>
                                        <div class="col-4 align-center">

                                            <img class="card-img img_carousel_small" src="<%- drink.img %>"
                                                alt="Product Image 3">
                                        </div>
                                    </div>
                                </div>
                                <!--/.First slide-->

                                <!--Second slide-->
                                <div class="carousel-item">
                                    <div class="row">
                                        <div class="col-4 align-center">

                                            <img class="card-img img_carousel_small" src="<%- drink.img %>"
                                                alt="Product Image 4">
                                        </div>
                                        <div class="col-4 align-center">

                                            <img class="card-img img_carousel_small" src="<%- drink.img %>"
                                                alt="Product Image 5">
                                        </div>
                                        <div class="col-4 align-center">

                                            <img class="card-img img_carousel_small" src="<%- drink.img %>"
                                                alt="Product Image 6">
                                        </div>
                                    </div>
                                </div>
                                <!--/.Second slide-->

                                <!--Third slide-->
                                <div class="carousel-item">
                                    <div class="row">
                                        <div class="col-4 align-center">

                                            <img class="card-img img_carousel_small" src="<%- drink.img %>"
                                                alt="Product Image 7">
                                        </div>
                                        <div class="col-4 align-center">

                                            <img class="card-img img_carousel_small" src="<%- drink.img %>"
                                                alt="Product Image 8">
                                        </div>
                                        <div class="col-4 align-center">

                                            <img class="card-img img_carousel_small" src="<%- drink.img %>"
                                                alt="Product Image 9">
                                        </div>
                                    </div>
                                </div>
                                <!--/.Third slide-->
                            </div>
                            <!--End Slides-->
                        </div>
                        <!--End Carousel Wrapper-->
                        <!--Start Controls-->
                        <div class="col-1 align-self-center">
                            <a href="#multi-item-example" role="button" data-bs-slide="next">
                                <i class="text-dark fas fa-chevron-right"></i>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <!--End Controls-->
                    </div>
                </div>
                <!-- col end -->
                <div class="col-lg-7 d-flex align-items-center">
                    <div class="card ">
                        <div class="card-body px-4" style="border: 2px solid #122223;
                    ">
                            <h2 class="" style="font-weight: 700;">
                                <%- drink.name %>
                            </h2>
                            <div class="py-2" style="font-weight: bold; font-size: 25px; color: #437b8b;">
                                <%- drink.price.toLocaleString('it-IT', {style : 'currency' , currency : 'VND' }) %>
                            </div>
                            <hr>
                            <h6>Mô tả:</h6>
                            <p class="" style="text-align: justify;">Lorem ipsum dolor sit amet, consectetur adipiscing
                                elit, sed do eiusmod temp incididunt ut labore et dolore magna aliqua. Quis ipsum
                                suspendisse. Donec condimentum elementum convallis. Nunc sed orci a diam ultrices
                                aliquet
                                interdum quis nulla.</p>
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <h6>Loại có sẵn:</h6>
                                </li>
                                <li class="list-inline-item">
                                    <p class="text-muted"><strong>Đá / Nóng</strong></p>
                                </li>
                            </ul>

                            <div class="row">
                                <div class="col-auto">
                                    <div class="list-group list-group-horizontal pb-3">
                                        <div class="m-auto" style="font-weight: 500;">Cỡ đồ uống:
                                        </div>
                                        <div class="list-group-item m-auto">
                                            <label class="cover-radio-size">Nhỏ (S)
                                                <input type="radio" name="size-drink" id="1">
                                                <span class="checkmark"></span>
                                            </label>
                                        </div>
                                        <div class="list-group-item m-auto">
                                            <label class="cover-radio-size">Vừa (M)
                                                <input type="radio" name="size-drink" id="1" checked="checked">
                                                <span class="checkmark"></span>
                                            </label>
                                        </div>
                                        <div class="list-group-item">
                                            <label class="cover-radio-size">Lớn (L)
                                                <input type="radio" name="size-drink" id="1">
                                                <span class="checkmark"></span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <div class="list-group list-group-horizontal pb-3">
                                        <div class="m-auto" style="font-weight: 500;">
                                            Số lượng
                                        </div>

                                        <div class="list-group-item"><button id="btn-minus" type="button"
                                                class="btn btn-success btn-size list-group-item-action"
                                                style="background-color: #437b8b; font-weight: 900; font-size: 15px;">-</button>
                                        </div>

                                        <div class="list-group-item d-flex align-items-center"> <input type="text"
                                                class="quantity p-1 text-center" value="1" style="max-width: 35px;">
                                        </div>

                                        <div class="list-group-item"><button id="btn-plus" type="button"
                                                class="btn btn-success btn-size list-group-item-action"
                                                style="background-color: #437b8b; font-weight: 900; font-size: 15px;">+</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row pb-3">
                                <div class="col d-grid">
                                    <button type="submit" class="btn btn-success btn-lg p-2" name="submit"
                                        value="buy">Mua ngay</button>
                                </div>
                                <form class="col d-grid" action="/add-to-cart/<%- drink._id %>" method="get">
                                    <button type="submit" class="btn btn-success btn-lg" name="submit" value="addtocard"
                                        style="background-color: #30583a;">Thêm vào giỏ hàng</button>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </div>
</section>
<!-- End Detail -->

